<wxs module="style">
  module.exports = {
    title: function (sys) {
      var style = []

      if (sys) {
        style = style.concat(
          'padding-top: ', sys.menuButtonRect.top - 5, 'px;',
          'height: ', sys.menuButtonRect.height + 10, 'px;',
        )
      }

      return style.join('')
    }
  }
</wxs>

